{
  "compilerOptions": {
    // Config taken from https://www.totaltypescript.com/tsconfig-cheat-sheet
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "bundler",
    "module": "es2022",
    "noEmit": true,

    "lib": ["es2022"],

    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
